<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DashboardFragment">


    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/speedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/speedometer_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_tickRotation="false"
        app:sv_unit="liters"
        app:sv_textColor="@android:color/primary_text_dark"
        app:sv_unitTextColor="@android:color/primary_text_dark"
        app:sv_speedTextColor="@android:color/primary_text_dark"
        app:sv_unitUnderSpeedText="true"
        app:sv_withTremble="false" />

</androidx.constraintlayout.widget.ConstraintLayout>